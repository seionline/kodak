<table>
  <% products.each do |product| %>
    <tr>
      <td class='top-line td-fixed-width'>
        <span class='font-bold'><%= product.name[I18n.locale.to_s] %></span>
        <% if product.description.present? %>
          <br>
          <%= product.description[I18n.locale.to_s] %>
        <% end %>
      </td>
      <td class='font-bold top-line pl-5'><%= number_with_precision(product.price, precision: 2) %>â‚¬</td>
    </tr>

  <% end %>
</table>
