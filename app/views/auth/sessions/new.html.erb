<h1><%= t('auth.sessions.new.title') %></h1>

<% if @error %>
  <p><%= t('auth.sessions.new.error_message') %></p>
<% end %>

<p>
  <%= t('auth.sessions.new.forgotten_password_message') %>
  <%= link_to t('auth.sessions.new.reset_password'), new_auth_password_reset_request_path %>
</p>

<%= form_for :auth_session, url: auth_session_path, class: 'flex flex-col items-start' do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <% # TODO: translate password label %>
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit t('auth.sessions.new.submit'), disable_with: t('auth.sessions.new.submit_disable_with') %>
<% end %>

<p>
  <%= t('auth.sessions.new.sign_up_html', href: link_to(t('auth.sessions.new.sign_up_href'), sign_up_path)) %>
</p>